{
  "name": "poolscore",
  "version": "1.0.0",
  "description": "A pool billard score tracker built with React and Google Cloud Platform.",
  "homepage": "https://sbutz.github.io/poolscore",
  "private": true,
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "concurrently --kill-others \"npm:start:client\" \"npm:start:functions\" \"npm:start:emulator\"",
    "start:client": "cd client && npm start",
    "start:functions": "cd functions && npm run build:watch",
    "start:emulator": "npx firebase-tools emulators:start --import ./firestore/emulator_data"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}

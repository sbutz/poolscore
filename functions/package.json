{
  "name": "functions",
  "version": "1.0.0",
  "description": "Cloud Functions package of poolscore",
  "private": true,
  "author": "",
  "license": "ISC",
  "scripts": {
    "lint": "eslint --ext src/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "predeploy": "npm run build",
    "deploy": "npx firebase-tools deploy --only functions",
    "pretest": "npm run build",
    "test": "npx firebase-tools emulators:exec 'npx jest'",
    "test:watch": "concurrently --kill-others \"npm:build:watch\" \"npx firebase-tools emulators:exec 'npx jest --watch'\""
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.4.1",
    "nanoid": "^3.3.6"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.7",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.52.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.0",
    "firebase-functions-test": "^3.1.0",
    "firebase-tools": "^11.30.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5"
  }
}
